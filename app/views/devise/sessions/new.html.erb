<h2>Sign in</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="row">
    <div class="small-3 columns">
      <%= f.label :email, class: "right inline" %>
    </div>
  <div class="small-9 columns"><%= f.text_field :email %></div>
    <div class="row">
    <div class="small-3 columns">
      <%= f.label :password, class: "right inline" %>
    </div>
  <div class="small-9 columns"><%= f.password_field :password %></div>
  <div class="row">
    <% if devise_mapping.rememberable? -%>
      <div class="small-6 small-offset-3 columns" ><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
    <% end -%>
  </div>
  <div class="row">
    <div class="small-6 small-offset-3 columns"><%= f.submit "Sign In", class: "round button tiny" %></div>
  </div>
<% end %>

<%= render "devise/shared/links" %>